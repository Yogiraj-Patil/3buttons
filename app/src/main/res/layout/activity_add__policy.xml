<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Policy">

    <android.support.design.widget.AppBarLayout
        style="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/policytoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
            app:title="Add New Customer Policy" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="57dp"

            android:orientation="vertical">
            <!-- __________________________end________________________________________   -->

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:text="Add Your Fields:-"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/policy_idTextInput"
                style="@style/Widget.Shrine.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:hint="Policy Id"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/policy_idtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete" />
            </android.support.design.widget.TextInputLayout>
            <!-- __________________________end________________________________________   -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/nameTextInput"
                style="@style/Widget.Shrine.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:hint="Customer Name"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/nametext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete" />
            </android.support.design.widget.TextInputLayout>

            <!-- __________________________end________________________________________   -->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/mobileTextInput"
                style="@style/Widget.Shrine.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:hint="Mobile Number"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/mobiletext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />
            </android.support.design.widget.TextInputLayout>

            <!-- __________________________end________________________________________   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/startdateTextInput"
                    style="@style/Widget.Shrine.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    app:errorEnabled="true">

                    <TextView
                        android:id="@+id/startdatetext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:hint="Start Date" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/enddateTextInput"
                    style="@style/Widget.Shrine.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    app:errorEnabled="true">

                    <TextView
                        android:id="@+id/enddatetext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:hint="End Date" />
                </android.support.design.widget.TextInputLayout>




            </LinearLayout>

            <!-- __________________________end________________________________________   -->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/companeyTextInput"
                style="@style/Widget.Shrine.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:hint="Company Name"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/companeytext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete" />
            </android.support.design.widget.TextInputLayout>


            <!-- __________________________end________________________________________   -->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/policy_typeTextInput"
                style="@style/Widget.Shrine.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:hint="Policy Type"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/policy_typetext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete" />
            </android.support.design.widget.TextInputLayout>

            <!-- __________________________end________________________________________   -->


            <android.support.design.widget.TextInputLayout
                android:id="@+id/amountTextInput"
                style="@style/Widget.Shrine.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:hint="Amount"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/amounttext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete" />
            </android.support.design.widget.TextInputLayout>

            <!-- __________________________end________________________________________   -->


            <android.support.design.widget.TextInputLayout
                android:id="@+id/remainTextInput"
                style="@style/Widget.Shrine.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:hint="Remaing Amount"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/remainamounttext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete" />
            </android.support.design.widget.TextInputLayout>

            <!-- __________________________end________________________________________   -->




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="90dp"
                android:layout_marginRight="30dp">

                <android.support.design.button.MaterialButton
                    android:id="@+id/submit_button"
                    style="@style/Widget.Shrine.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="Submit" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/back_button"
                    style="@style/Widget.Shrine.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_toStartOf="@id/next_button"
                    android:layout_toLeftOf="@id/next_button"
                    android:text="back" />

            </RelativeLayout>



        </LinearLayout>


    </ScrollView>


</android.support.design.widget.CoordinatorLayout>